<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Note Settings"
        android:textColor="@color/blackDefault"
        android:textSize="18sp" />

    <Button
        android:id="@+id/lockNoteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_lock_note"
        android:drawablePadding="8dp"
        android:drawableTint="@color/folderBlue"
        android:focusable="true"
        android:fontFamily="@font/poppins_regular"
        android:text="Lock Note"
        android:textAlignment="textStart"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/changeFolderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_folder"
        android:drawablePadding="8dp"
        android:drawableTint="@color/folderBlue"
        android:focusable="true"
        android:fontFamily="@font/poppins_regular"
        android:text="Change Folder"
        android:textAlignment="textStart"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rectangle"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_delete_note"
        android:drawablePadding="8dp"
        android:drawableTint="@color/folderBlue"
        android:focusable="true"
        android:fontFamily="@font/poppins_regular"
        android:text="Delete Note"
        android:textAlignment="textStart"
        android:textAllCaps="false" />
</LinearLayout>