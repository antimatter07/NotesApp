<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/passwordTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Select Folder Color"
                android:textColor="@color/blackDefault"
                android:textSize="18sp" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/colorsGl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:columnCount="4"
                app:columnOrderPreserved="true"
                app:rowCount="2"
                app:rowOrderPreserved="true">

                <ImageButton
                    android:id="@+id/colorDefaultBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderDefault"
                    android:src="@drawable/ic_check"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />

                <ImageButton
                    android:id="@+id/colorRedBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderRed"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />

                <ImageButton
                    android:id="@+id/colorOrangeBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderOrange"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />

                <ImageButton
                    android:id="@+id/colorYellowBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderYellow"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />

                <ImageButton
                    android:id="@+id/colorGreenBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderGreen"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />

                <ImageButton
                    android:id="@+id/colorCyanBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderCyan"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />

                <ImageButton
                    android:id="@+id/colorBlueBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderBlue"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />


                <ImageButton
                    android:id="@+id/colorPurpleBtn"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@color/folderPurple"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill" />
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>